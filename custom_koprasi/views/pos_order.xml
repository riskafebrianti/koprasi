<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="nama_model_treeee">
            <field name="name">pos.order.tree</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <field name="note"/>
                    <field name="method_pay"/>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="nama_model_form_pos_order">
            <field name="name">pos.order.form</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="before">
                    <field name="method_pay" />


                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="pos_order__searchhh">
        <field name="name">pos.order.search</field>
        <field name="model">pos.order</field>
        <field name="arch" type="xml">
            <search>
              
                <filter name="fl_draft" string="Today"  domain="[('date_order',  '>=', (datetime.datetime.now().strftime('%Y-%m-%d') ))]"/>
            </search>
        </field>
    </record>


    </data>
</odoo>
